<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xws111.sqlpractice.mapper.ArticleCategoryMapper">
    <resultMap id="BaseResultMap" type="com.xws111.sqlpractice.model.entity.ArticleCategory">
        <id column="article_id" property="articleId" />
        <id column="category_id" property="categoryId" />
    </resultMap>
    <parameterMap id="BaseParameterMap" type="com.xws111.sqlpractice.model.entity.ArticleCategory"></parameterMap>
    <!-- 插入关系 -->
    <insert id="insertArticleCategory" parameterMap="BaseParameterMap">
        INSERT INTO article_category (article_id, category_id)
        VALUES (#{articleId}, #{categoryId})
    </insert>
    <!-- 删除关系 -->
    <delete id="deleteByCompositeKey" parameterMap="BaseParameterMap">
        DELETE FROM article_category
        WHERE article_id = #{articleId}
    </delete>


</mapper>